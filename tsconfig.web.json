{
  "extends": "@electron-toolkit/tsconfig/tsconfig.web.json",
  "include": [
    "src/renderer/src/**/*",
    "src/preload/*.d.ts",
    "src/shared/**/*",
    "src/renderer/src/global.d.ts"
  ],
  "compilerOptions": {
    "composite": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@renderer/*": ["src/renderer/src/*"],
      "@shared/*": ["src/shared/*"]
    },
    "types": [
      "vitest/globals" // <--- Add: Make Vitest globals available for potential component tests
    ]
     // Add skipLibCheck if you encounter issues with node_modules types during tests
     // "skipLibCheck": true
  }
}