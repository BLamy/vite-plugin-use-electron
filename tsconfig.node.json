{
  "extends": "@electron-toolkit/tsconfig/tsconfig.node.json",
  "include": [
    "electron.vite.config.*", // Keep this
    "src/main/**/*",         // Keep this
    "src/preload/**/*",       // Keep this
    "src/shared/**/*",
    "vite-plugin-use-main.ts", // <--- Add: Include your plugin file (adjust path if not in root)
    "tests/**/*.ts"            // <--- Add: Include test files (adjust pattern if needed)
   ],
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["src/shared/*"]
    },
    "types": [
      "electron-vite/node",
      "vitest/globals" // <--- Add: Make Vitest globals available
    ],
    // Add skipLibCheck if you encounter issues with node_modules types during tests
    // "skipLibCheck": true
  }
}